{
  "name": "autoblogger",
  "version": "0.1.0",
  "description": "A headless CMS with AI writing tools, WYSIWYG editor, and RSS auto-draft",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ui": {
      "import": "./dist/ui.mjs",
      "require": "./dist/ui.js",
      "types": "./dist/ui.d.ts"
    },
    "./styles/preset": "./dist/styles/preset.js",
    "./styles/editor.css": "./dist/styles/editor.css",
    "./styles/article": {
      "import": "./dist/styles/article.mjs",
      "require": "./dist/styles/article.js"
    },
    "./seo": {
      "import": "./dist/lib/seo.mjs",
      "require": "./dist/lib/seo.js"
    },
    "./markdown": {
      "import": "./dist/lib/markdown.mjs",
      "require": "./dist/lib/markdown.js"
    }
  },
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@prisma/client": "^5.0.0 || ^6.0.0",
    "next": "^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@tiptap/extension-bubble-menu": "^2.0.0",
    "@tiptap/extension-image": "^2.0.0",
    "@tiptap/extension-link": "^2.0.0",
    "@tiptap/extension-placeholder": "^2.0.0",
    "@tiptap/pm": "^2.0.0",
    "@tiptap/react": "^2.0.0",
    "@tiptap/starter-kit": "^2.0.0",
    "marked": "^12.0.0",
    "openai": "^4.0.0",
    "turndown": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/turndown": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "cms",
    "blog",
    "ai",
    "writing",
    "tiptap",
    "editor",
    "next.js",
    "headless"
  ],
  "author": "Hunter Rosenblume",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hrosenblume/autoblogger.git"
  }
}
