{
  "name": "autoblogger",
  "version": "0.2.6",
  "description": "A headless CMS with AI writing tools, WYSIWYG editor, and RSS auto-draft",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "autoblogger": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ui": {
      "import": "./dist/ui.mjs",
      "require": "./dist/ui.js",
      "types": "./dist/ui.d.ts"
    },
    "./styles/preset": "./dist/styles/preset.js",
    "./styles/preset.js": "./dist/styles/preset.js",
    "./dist/styles/preset.js": "./dist/styles/preset.js",
    "./styles/editor.css": "./dist/styles/editor.css",
    "./styles/autoblogger.css": "./dist/styles/autoblogger.css",
    "./styles/standalone.css": "./dist/styles/standalone.css",
    "./styles/article": {
      "import": "./dist/styles/article.mjs",
      "require": "./dist/styles/article.js"
    },
    "./seo": {
      "import": "./dist/lib/seo.mjs",
      "require": "./dist/lib/seo.js"
    },
    "./markdown": {
      "import": "./dist/lib/markdown.mjs",
      "require": "./dist/lib/markdown.js"
    }
  },
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "build": "tsup && cp src/styles/preset.js dist/styles/preset.js && cp src/styles/autoblogger.css dist/styles/autoblogger.css && tailwindcss -c tailwind.standalone.config.js -i src/styles/tailwind-input.css -o dist/styles/standalone.css --minify",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@prisma/client": "^5.0.0 || ^6.0.0",
    "lucide-react": ">=0.400.0",
    "next": "^14.0.0 || ^15.0.0 || ^16.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@mozilla/readability": "^0.6.0",
    "@sparticuz/chromium": "^131.0.0",
    "@tiptap/extension-bubble-menu": "^3.15.3",
    "@tiptap/extension-image": "^3.15.3",
    "@tiptap/extension-link": "^3.15.3",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "clsx": "^2.1.1",
    "jsdom": "^27.4.0",
    "marked": "^12.0.0",
    "openai": "^4.0.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "puppeteer": "^24.0.0",
    "puppeteer-core": "^24.0.0",
    "rss-parser": "^3.13.0",
    "sanitize-html": "^2.17.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "turndown": "^7.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.3.7",
    "@types/sanitize-html": "^2.16.0",
    "@types/turndown": "^5.0.0",
    "lucide-react": "^0.562.0",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "cms",
    "blog",
    "ai",
    "writing",
    "tiptap",
    "editor",
    "next.js",
    "headless"
  ],
  "author": "Hunter Rosenblume",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hrosenblume/autoblogger.git"
  }
}
